function b() {
  echo "$@" | bc
}
function hextobin() {
  in="$(echo $1 | tr "[:lower:]" "[:upper:]")"
  echo "ibase=16; obase=2; $in"|bc
}
function bintohex() {
  echo "obase=16; ibase=2; $1"|bc
}
function hextodec() {
  in=$(echo $1 | tr "[:lower:]" "[:upper:]")
  echo "ibase=16; $in"|bc
}
function dectohex() {
  echo "obase=16; $1"|bc
}
function bintodec() {
  echo "ibase=2; $1"|bc
}
function dectobin() {
  echo "obase=2; $1"|bc
}

