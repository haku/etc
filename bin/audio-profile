#!/bin/bash
set -eu

# get field names with --Info-Parameters
afields=\
'Audio;%StreamCount%\n'\
'%Format/String%\n'\
'%Channel(s)%\n'\
'%SamplingRate/String%\n'\
'%BitRate/String%\n'\
'%Duration/String3%\n'

for f in "$@" ; do
  readarray -t a < <(mediainfo --Inform="$afields" "$f")
  [ "${#a[@]}" -le 1 ] && continue

  printf '%-3s'   "${a[0]}"
  printf '%10s  ' "${a[1]}"
  printf '%-5s'   "${a[2]}ch"
  printf '%-10s'  "${a[3]}"
  printf '%-10s'  "${a[4]}"
  printf '%-14s'  "${a[5]}"
  printf '%s'     "$f"
  printf '\n'
done
