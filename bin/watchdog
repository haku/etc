#!/usr/bin/env python3
# vim: expandtab shiftwidth=2 softtabstop=2

import os
import subprocess
import sys
from datetime import datetime
from pathlib import Path

MIN_UPTIME_SECONDS = 3600
MIN_DOWNTIME_SECONDS = 15 * 60
DOWNTIME_FILE = '/tmp/downtime'
DEBUG_DIR = Path.home()

def up_seconds():
  with open('/proc/uptime') as f:
    return int(float(f.readline().split(' ')[0]))

def mark_up():
  with open(DOWNTIME_FILE, 'w') as f:
    f.write('0')

def mark_down():
  if down_seconds() > 0:
    return
  with open(DOWNTIME_FILE, 'w') as f:
    f.write(str(int(datetime.now().timestamp())))

def down_seconds():
  try:
    with open(DOWNTIME_FILE) as f:
      l = f.readline()
  except FileNotFoundError:
    l = '0'

  t = int(l)
  if t == 0:
    return 0
  return datetime.now().timestamp() - t

def run(args):
  print('Running:\n$ %s' % ' '.join(args))
  r = subprocess.run(
      args=args,
      capture_output=True,
      check=False,
      timeout=30)
  return r

if not os.path.isdir(DEBUG_DIR):
  print('debug dir does not exist: %s' % DEBUG_DIR)

if up_seconds() < MIN_UPTIME_SECONDS:
  print('uptime too low.')
  sys.exit(0)

ping = run(['ping', '-c', '1', '-w', '10', '192.168.1.1'])
if ping.returncode == 0:
  print('ping success.')
  mark_up()
  sys.exit(0)

mark_down()
if down_seconds() < MIN_DOWNTIME_SECONDS:
  print('downtime too low: %ss' % int(down_seconds()))
  sys.exit(0)

try:
  debug_info = ''
  debug_info += 'ip addr:\n'
  debug_info += run(['ip', 'addr']).stdout.decode()

  debug_file = '%s/watchdog.%s.txt' %(
      DEBUG_DIR,
      datetime.now().strftime('%Y%m%d-%H%M%S'))
  with open(debug_file, 'w') as f:
    f.write(debug_info)
  print('wrote debug info: %s' % debug_file)
except Exception as e:
  print('failed to gather/write debug info: %s' % e)

run(['/sbin/reboot'])
