#!/bin/bash
set -eu

irssi() {
  f="$HOME/.irssi/activity_file"
  if ! [ -s "$f" ] ; then
    f="$HOME/.irssi/remote/activity_file"
    if ! [ -s "$f" ] ; then
      return 0
    fi
  fi

  #echo -n '#[fg=brightblue]{#[fg=default] '
  local count=0
  for I in $(cat $f); do
    W="$(echo "$I" | cut -d ',' -f 1)$(echo "${I/\#/}" | cut -d ',' -f 3 | cut -c 1-2)"
    S="$(echo "$I" | cut -d ',' -f 2)"
    if [ "$S" != "0" ] ; then
      if [ "$S" = "1" ] ; then
        continue
        #A='#[fg=colour8]'
        #B=''
      elif [ "$S" = "2" ] ; then
        A='#[fg=brightyellow]'
        B=''
      elif [ "$S" = "3" ] ; then
        A='#[fg=white]>'
        B='<'
      else
        A=''
        B="@${S}"
      fi
      echo -n "${A}${W}${B}#[fg=default] "
      (( count +=1 ))
    fi
  done
  if [ "$count" -lt 1 ] ; then
  echo -n "#[fg=yellow]â€¢ #[fg=default]"
  fi
  #echo -n '#[fg=brightblue]}#[fg=default] '
}

network() {
  w="/usr/bin/wicd-cli"
  if [ -x "$w" ] && info=$("$w" --wireless -d) ; then
    ssid=$(echo "$info" | grep Essid | cut -d ' ' -f 2-)
    qual=$(echo "$info" | grep Quality | cut -d ' ' -f 2-)
    echo -n "${ssid}/${qual} "
  fi

  ipaddr="$(ip addr | sed -En 's/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p' | tr '\n' ',')"
  ipaddr="${ipaddr%,}"
  hostname="$(hostname -s)"
  echo -n "#[fg=brightgreen]$hostname/$ipaddr#[fg=default] "
}

batt() {
  b="$HOME/bin/battery"
  if [ -x "$b" ] ; then
    echo -n "$("$b") "
  fi
}

rpi_core_temp() {
  v="/usr/bin/vcgencmd"
  if [ -x "$v" ] ; then
    local temp_core="$("$v" measure_temp | sed -rn -e 's/^.*=(.*)$/\1/p')"
    echo -n "$temp_core "
  fi
}

load() {
  echo -n "#[fg=brightblue]$(uptime | sed -e "s/^.*: //" -e "s/,//g")#[fg=default]"
}

irssi
network
batt
rpi_core_temp
load
