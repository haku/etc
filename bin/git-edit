#!/usr/bin/env bash
set -eu

files=()
while read file ; do
  mime="$(file -bi "$file")"
  case "$mime" in
    text/*)
      ;&
    application/javascript*)
      files+=("$file")
      ;;
  esac
done < <(git status --short . | awk '{
  $1 ~ /^(MM?|A|\?\?)$/
  if ($2 ~ /^"/) {
    match($0, /"([^"]+)"/, m)
    print m[1]
  } else {
    print $2
  }
}')

if [ ${#files[@]} -lt 1 ] ; then
  echo "No modified files."
  exit
fi

exec $EDITOR "${files[@]}"
