#!/bin/bash
set -eu

for IN in "$@" ; do
  echo "f=$IN"
  CODEC=$(midentify "$IN" | grep "AUDIO_CODEC" | cut -d '=' -f 2)
  echo "c=$CODEC"
  if [[ "$CODEC" == *mp3* ]] ; then
    EXT="mp3"
  elif [[ "$CODEC" == *aac* ]] ; then
    EXT="aac"
    echo "INFO: convert to m4a with: MP4Box -add in.aac -new out.m4a"
  else
    echo "Unknown codec: $CODEC"
    exit 1
  fi
  echo "e=$EXT"
  OUT="$(basename "$IN").$EXT"
  echo "o=$OUT"
  if [ -e "$OUT" ] ; then
    echo "Already exists: $OUT"
    exit 1
  fi
  ffmpeg -i "$IN" -vn -acodec copy "$OUT"
  echo ""
done
