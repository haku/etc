#!/bin/bash
set -eu

# http://manual.calibre-ebook.com/generated/en/ebook-convert.html

kindle="/media/$USER/Kindle/documents"

for input in "$@" ; do
  echo -e "\n == $input =="

  args=()

  title="${input%.*}"
  args+=('--title' "$title")

  if [[ "$input" == *".html" ]] ; then
    args+=('--filter-css' 'color,font-family')
  fi

  echo -e "    => ${args[@]:-}"

  output="$(basename "$input").kindle.mobi"
  echo -e "    => $output\n"

  ebook-convert "$input" "$output" --output-profile kindle "${args[@]:+${args[@]}}"

  if [ -e "$kindle" ] ; then
    dest="$kindle/$output"
    if ! [ -e "$dest" ] ; then
      echo -e "\n    => $dest\n"
      cp "$output" "$dest"
    fi
  fi
done
