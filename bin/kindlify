#!/bin/bash
set -eu

kindle='/media/Kindle/documents'

for input in "$@" ; do
  echo -e "\n == $input =="
  output="`basename "$input"`.kindle.mobi"
  echo -e "    => $output\n"
  ebook-convert "$input" "$output" --output-profile kindle

  if [ -e "$kindle" ] ; then
    dest="$kindle/$output"
    if ! [ -e "$dest" ] ; then
      echo -e "\n    => $dest\n"
      cp "$output" "$dest"
    fi
  fi
done
